<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dillauniversity.controller.RegistrationController"
            prefWidth="1200" prefHeight="850"
            style="-fx-background-color: linear-gradient(to right, #1a237e, #283593);">
    
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(26, 35, 126, 0.9); -fx-padding: 15;">
            <Button text="← Back to Login" onAction="#goBackToLogin" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-underline: false; -fx-cursor: hand;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="DILLA UNIVERSITY - REGISTRATION FORM" 
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="dbStatusLabel" text="Database: Connected" 
                   style="-fx-text-fill: #81c784; -fx-font-size: 12; -fx-font-weight: bold;" />
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
                <!-- Registration Form Container -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-pref-width: 850;">
                    
                    <!-- Form Title -->
                    <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 0 0 20 0;">
                        <Label text="Create New Account" 
                               style="-fx-text-fill: #1a237e; -fx-font-size: 28; -fx-font-weight: bold;" />
                        <Label text="Fill in all required fields (*) to register with Dilla University" 
                               style="-fx-text-fill: #666; -fx-font-size: 16;" />
                    </VBox>
                    
                    <!-- User Type Selection -->
                    <VBox spacing="10" style="-fx-padding: 0 0 20 0;">
                        <Label text="Select User Type *" 
                               style="-fx-text-fill: #444; -fx-font-size: 18; -fx-font-weight: bold;" />
                        <HBox spacing="30">
                            <RadioButton fx:id="studentRadio" text="Student" 
                                         selected="true"
                                         style="-fx-font-size: 16; -fx-font-weight: bold;" />
                            <RadioButton fx:id="teacherRadio" text="Teacher" 
                                         style="-fx-font-size: 16; -fx-font-weight: bold;" />
                            <RadioButton fx:id="deanRadio" text="Dean"
                                         style="-fx-font-size: 16; -fx-font-weight: bold;" />
                        </HBox>
                    </VBox>
                    
                    <!-- Personal Information Section -->
                    <VBox spacing="15" style="-fx-padding: 20 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                        <Label text="Personal Information" 
                               style="-fx-text-fill: #1a237e; -fx-font-size: 22; -fx-font-weight: bold;" />
                        
                        <!-- Photo Upload Section -->
                        <HBox spacing="30" alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">
                            <!-- Profile Photo Preview -->
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fx:id="profileImageView" 
                                           fitHeight="150" fitWidth="150" 
                                           style="-fx-border-color: #ddd; -fx-border-width: 2; -fx-border-radius: 75;">
                                    <Image url="@../../../../images/default-avatar.png" />
                                </ImageView>
                                <Label fx:id="photoStatusLabel" text="No photo selected" 
                                       style="-fx-text-fill: #666; -fx-font-size: 12;" />
                            </VBox>
                            
                            <!-- Photo Upload Controls -->
                            <VBox spacing="15" alignment="CENTER_LEFT">
                                <Label text="Profile Photo *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <VBox spacing="10">
                                    <HBox spacing="15">
                                        <Button fx:id="browsePhotoButton" text="Browse Photo" 
                                                onAction="#browsePhoto"
                                                style="-fx-background-color: #e3f2fd; -fx-text-fill: #1a237e; 
                                                       -fx-font-weight: bold; -fx-font-size: 14; 
                                                       -fx-background-radius: 6; -fx-padding: 8 20; 
                                                       -fx-cursor: hand; -fx-border-color: #bbdefb; 
                                                       -fx-border-width: 1;" />
                                        <Button fx:id="capturePhotoButton" text="Capture Photo" 
                                                onAction="#capturePhoto"
                                                style="-fx-background-color: #f3e5f5; -fx-text-fill: #4a148c; 
                                                       -fx-font-weight: bold; -fx-font-size: 14; 
                                                       -fx-background-radius: 6; -fx-padding: 8 20; 
                                                       -fx-cursor: hand; -fx-border-color: #e1bee7; 
                                                       -fx-border-width: 1;" />
                                    </HBox>
                                    <Button fx:id="removePhotoButton" text="Remove Photo" 
                                            onAction="#removePhoto"
                                            style="-fx-background-color: #ffebee; -fx-text-fill: #c62828; 
                                                   -fx-font-weight: bold; -fx-font-size: 14; 
                                                   -fx-background-radius: 6; -fx-padding: 8 20; 
                                                   -fx-cursor: hand; -fx-border-color: #ffcdd2; 
                                                   -fx-border-width: 1;" />
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="Photo Requirements:" 
                                           style="-fx-text-fill: #666; -fx-font-size: 13; -fx-font-weight: bold;" />
                                    <Label text="• Max size: 2MB" 
                                           style="-fx-text-fill: #777; -fx-font-size: 12;" />
                                    <Label text="• Supported formats: JPG, PNG" 
                                           style="-fx-text-fill: #777; -fx-font-size: 12;" />
                                    <Label text="• Recommended: 300x300 pixels" 
                                           style="-fx-text-fill: #777; -fx-font-size: 12;" />
                                </VBox>
                            </VBox>
                        </HBox>
                        <Label fx:id="photoError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        
                        <!-- First Name and Last Name -->
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            
                            <VBox spacing="5" GridPane.columnIndex="0">
                                <Label text="First Name *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <TextField fx:id="firstNameField" promptText="Enter first name" 
                                           style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                  -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                  -fx-padding: 12; -fx-font-size: 16;" />
                                <Label fx:id="firstNameError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                            
                            <VBox spacing="5" GridPane.columnIndex="1">
                                <Label text="Last Name *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <TextField fx:id="lastNameField" promptText="Enter last name" 
                                           style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                  -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                  -fx-padding: 12; -fx-font-size: 16;" />
                                <Label fx:id="lastNameError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                        </GridPane>
                        
                        <!-- Age and Gender -->
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            
                            <VBox spacing="5" GridPane.columnIndex="0">
                                <Label text="Age *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <TextField fx:id="ageField" promptText="Enter age (18-100)" 
                                           style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                  -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                  -fx-padding: 12; -fx-font-size: 16;" />
                                <Label fx:id="ageError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                            
                            <VBox spacing="5" GridPane.columnIndex="1">
                                <Label text="Gender *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <HBox spacing="20" style="-fx-padding: 12 0 0 0;">
                                    <RadioButton fx:id="maleRadio" text="Male" 
                                                 style="-fx-font-size: 16;" />
                                    <RadioButton fx:id="femaleRadio" text="Female" 
                                                 style="-fx-font-size: 16;" />
                                </HBox>
                                <Label fx:id="genderError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                        </GridPane>
                        
                        <!-- Phone Number -->
                        <VBox spacing="5">
                            <Label text="Phone Number *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <HBox spacing="10">
                                <ComboBox fx:id="countryCodeComboBox" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                 -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                 -fx-pref-width: 120; -fx-pref-height: 45; -fx-font-size: 16;" />
                                <TextField fx:id="phoneNumberField" promptText="Phone number" 
                                           style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                  -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                  -fx-pref-width: 250; -fx-padding: 12; -fx-font-size: 16;" />
                            </HBox>
                            <Label fx:id="phoneError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Date of Birth -->
                        <VBox spacing="5">
                            <Label text="Date of Birth *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <DatePicker fx:id="dateOfBirthPicker" 
                                        style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                               -fx-border-color: #ddd; -fx-border-width: 1.5;
                                               -fx-font-size: 16; -fx-pref-height: 45;" />
                            <Label fx:id="dobError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Region and Zone of Birth -->
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            
                            <VBox spacing="5" GridPane.columnIndex="0">
                                <Label text="Region of Birth *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <ComboBox fx:id="regionComboBox" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                 -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                 -fx-pref-height: 45; -fx-font-size: 16;" />
                                <Label fx:id="regionError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                            
                            <VBox spacing="5" GridPane.columnIndex="1">
                                <Label text="Zone of Birth" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <ComboBox fx:id="zoneComboBox" 
                                          style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                 -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                 -fx-pref-height: 45; -fx-font-size: 16;" 
                                          disable="true" />
                                <Label fx:id="zoneError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                    <!-- Student Specific Fields -->
                    <VBox fx:id="studentFields" spacing="15" style="-fx-padding: 20 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                        <Label text="Student Information" 
                               style="-fx-text-fill: #1a237e; -fx-font-size: 22; -fx-font-weight: bold;" />
                        
                        <!-- Registration Number -->
                        <VBox spacing="5">
                            <Label text="Registration Number *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <TextField fx:id="regNumberField" promptText="e.g., RMMS-5210-/23" 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                              -fx-border-color: #ddd; -fx-border-width: 1.5;
                                              -fx-padding: 12; -fx-font-size: 16;" />
                            <Label fx:id="regNumberError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Academic Year -->
                        <VBox spacing="5">
                            <Label text="Academic Year *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <ComboBox fx:id="academicYearComboBox" 
                                      style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                             -fx-border-color: #ddd; -fx-border-width: 1.5;
                                             -fx-pref-height: 45; -fx-font-size: 16;" />
                            <Label fx:id="yearError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Department -->
                        <VBox spacing="5">
                            <Label text="Department *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <ComboBox fx:id="studentDeptComboBox" 
                                      style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                             -fx-border-color: #ddd; -fx-border-width: 1.5;
                                             -fx-pref-height: 45; -fx-font-size: 16;" />
                            <Label fx:id="studentDeptError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                    </VBox>
                    
                    <!-- Dean Specific Fields -->
<VBox fx:id="deanFields" spacing="15" style="-fx-padding: 20 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" visible="false" managed="false">
    <Label text="Dean Information" 
           style="-fx-text-fill: #1a237e; -fx-font-size: 22; -fx-font-weight: bold;" />
    
    <!-- Dean ID -->
    <VBox spacing="5">
        <Label text="Dean ID *" 
               style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
        <TextField fx:id="deanIdField" promptText="e.g., D-2024-001" 
                   style="-fx-background-radius: 8; -fx-border-radius: 8; 
                          -fx-border-color: #ddd; -fx-border-width: 1.5;
                          -fx-padding: 12; -fx-font-size: 16;" />
        <Label fx:id="deanIdError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
    </VBox>
    
    <!-- Department -->
    <VBox spacing="5">
        <Label text="Department *" 
               style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
        <ComboBox fx:id="deanDeptComboBox" 
                  style="-fx-background-radius: 8; -fx-border-radius: 8; 
                         -fx-border-color: #ddd; -fx-border-width: 1.5;
                         -fx-pref-height: 45; -fx-font-size: 16;" />
        <Label fx:id="deanDeptError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
    </VBox>
    
    <!-- Appointment Date -->
    <VBox spacing="5">
        <Label text="Appointment Date *" 
               style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
        <DatePicker fx:id="appointmentDatePicker" 
                    style="-fx-background-radius: 8; -fx-border-radius: 8; 
                           -fx-border-color: #ddd; -fx-border-width: 1.5;
                           -fx-font-size: 16; -fx-pref-height: 45;" />
        <Label fx:id="appointmentDateError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
    </VBox>
    
    <!-- Office Location -->
    <VBox spacing="5">
        <Label text="Office Location" 
               style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
        <TextField fx:id="officeLocationField" promptText="e.g., Block A, Room 201" 
                   style="-fx-background-radius: 8; -fx-border-radius: 8; 
                          -fx-border-color: #ddd; -fx-border-width: 1.5;
                          -fx-padding: 12; -fx-font-size: 16;" />
        <Label fx:id="officeLocationError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
    </VBox>
    
    <!-- Dean Type -->
    <VBox spacing="5">
        <Label text="Dean Type *" 
               style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
        <HBox spacing="20" style="-fx-padding: 12 0 0 0;">
            <RadioButton fx:id="departmentDeanRadio" text="Department Dean" 
                         style="-fx-font-size: 16;" selected="true" />
            <RadioButton fx:id="collegeDeanRadio" text="College Dean" 
                         style="-fx-font-size: 16;" />
        </HBox>
        <Label fx:id="deanTypeError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
    </VBox>
</VBox>
                    
                    <!-- Teacher Specific Fields -->
                    <VBox fx:id="teacherFields" spacing="15" style="-fx-padding: 20 0; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" visible="false" managed="false">
                        <Label text="Teacher Information" 
                               style="-fx-text-fill: #1a237e; -fx-font-size: 22; -fx-font-weight: bold;" />
                        
                        <!-- Employee ID -->
                        <VBox spacing="5">
                            <Label text="Employee ID *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <TextField fx:id="employeeIdField" promptText="e.g., T-2024-001" 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                              -fx-border-color: #ddd; -fx-border-width: 1.5;
                                              -fx-padding: 12; -fx-font-size: 16;" />
                            <Label fx:id="employeeIdError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Department -->
                        <VBox spacing="5">
                            <Label text="Department *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <ComboBox fx:id="teacherDeptComboBox" 
                                      style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                             -fx-border-color: #ddd; -fx-border-width: 1.5;
                                             -fx-pref-height: 45; -fx-font-size: 16;" />
                            <Label fx:id="teacherDeptError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Qualification -->
                        <VBox spacing="5">
                            <Label text="Qualification *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <TextField fx:id="qualificationField" promptText="e.g., PhD in Computer Science" 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                              -fx-border-color: #ddd; -fx-border-width: 1.5;
                                              -fx-padding: 12; -fx-font-size: 16;" />
                            <Label fx:id="qualificationError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                    </VBox>
                    
                    <!-- Account Information -->
                    <VBox spacing="15" style="-fx-padding: 20 0;">
                        <Label text="Account Information" 
                               style="-fx-text-fill: #1a237e; -fx-font-size: 22; -fx-font-weight: bold;" />
                        
                        <!-- Email -->
                        <VBox spacing="5">
                            <Label text="Email Address *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <TextField fx:id="emailField" promptText="Enter email address" 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                              -fx-border-color: #ddd; -fx-border-width: 1.5;
                                              -fx-padding: 12; -fx-font-size: 16;" />
                            <Label fx:id="emailError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Username -->
                        <VBox spacing="5">
                            <Label text="Username *" 
                                   style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <TextField fx:id="usernameField" promptText="Choose a username" 
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                              -fx-border-color: #ddd; -fx-border-width: 1.5;
                                              -fx-padding: 12; -fx-font-size: 16;" />
                            <Label fx:id="usernameError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                        </VBox>
                        
                        <!-- Password -->
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>
                            
                            <VBox spacing="5" GridPane.columnIndex="0">
                                <Label text="Create Password *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <PasswordField fx:id="passwordField" promptText="Min 8 characters" 
                                               style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                      -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                      -fx-padding: 12; -fx-font-size: 16;" />
                                <Label fx:id="passwordError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                            
                            <VBox spacing="5" GridPane.columnIndex="1">
                                <Label text="Confirm Password *" 
                                       style="-fx-text-fill: #444; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" 
                                               style="-fx-background-radius: 8; -fx-border-radius: 8; 
                                                      -fx-border-color: #ddd; -fx-border-width: 1.5;
                                                      -fx-padding: 12; -fx-font-size: 16;" />
                                <Label fx:id="confirmPasswordError" style="-fx-text-fill: #c62828; -fx-font-size: 12;" visible="false" />
                            </VBox>
                        </GridPane>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 30 0 0 0;">
                        <Button text="CLEAR ALL" onAction="#clearForm"
                                style="-fx-background-color: #f5f5f5; -fx-text-fill: #666; -fx-font-weight: bold; -fx-font-size: 16; 
                                       -fx-background-radius: 8; -fx-padding: 12 40; -fx-cursor: hand; 
                                       -fx-border-color: #ddd; -fx-border-width: 1.5;" />
                        
                        <!-- REGISTER BUTTON - This will save to database -->
                        <Button fx:id="registerButton" text="REGISTER ACCOUNT" 
                                onAction="#submitRegistration"
                                style="-fx-background-color: linear-gradient(to right, #1a237e, #283593); 
                                       -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; 
                                       -fx-background-radius: 8; -fx-padding: 15 50; -fx-cursor: hand;" />
                    </HBox>
                    
                    <!-- Message Display -->
                    <VBox fx:id="messageBox" alignment="CENTER" visible="false" managed="false"
                          style="-fx-background-color: #e8f5e9; -fx-background-radius: 8; 
                                 -fx-border-color: #c8e6c9; -fx-border-radius: 8; 
                                 -fx-border-width: 1.5; -fx-padding: 15; -fx-margin: 20 0 0 0;">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label fx:id="messageIcon" text="✓" 
